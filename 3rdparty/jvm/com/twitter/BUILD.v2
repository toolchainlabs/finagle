UTIL_VERSION = '21.10.0'

def util_lib(name, packages=None):
    artifact_name = f'util-{name}_2.13'
    jvm_artifact(
      name=artifact_name,
      group='com.twitter',
      artifact=artifact_name,
      version=UTIL_VERSION,
      packages=(packages or [f'com.twitter.{name}.**']),
    )

util_lib('app')
util_lib('cache')
util_lib('codec')
util_lib('core', packages=[
  'com.twitter.conversions.**',
  'com.twitter.concurrent.**',
  'com.twitter.io.**',
  'com.twitter.service.**',
  'com.twitter.util.**',
])
util_lib('hashing')
util_lib('jvm')
util_lib('lint')
util_lib('logging')
util_lib('registry')
util_lib('routing')
util_lib('security')
util_lib('stats', packages=[
  # Not a typo.
  'com.twitter.finagle.stats.**',
])
util_lib('tunable')
util_lib('zk-test')
